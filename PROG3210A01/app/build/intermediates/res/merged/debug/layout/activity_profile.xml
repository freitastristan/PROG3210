<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tristan.prog3210a01.ProfileActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/lblProfileTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            android:textSize="32sp"
            android:text="Your Profile" />

        <EditText
            android:id="@+id/txtProfileUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="21dp"
            android:layout_below="@+id/lblProfileTitle"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:id="@+id/txtProfileFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txtProfileUsername"
            android:layout_alignRight="@+id/txtProfileUsername"
            android:layout_below="@+id/txtProfileUsername"
            android:layout_marginTop="23dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txtProfileLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtProfileFirstName"
            android:layout_alignStart="@+id/txtProfileFirstName"
            android:layout_below="@+id/txtProfileFirstName"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnProfileMaps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txtProfileLastName"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/txtProfileLastName"
            android:layout_marginBottom="27dp"
            android:text="Maps"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold|italic"
            android:onClick="onClick" />

        <CheckBox
            android:id="@+id/chkProfileVisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txtProfileLastName"
            android:layout_alignRight="@+id/txtProfileLastName"
            android:layout_below="@+id/txtProfileLastName"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="17dp" />

        <TextView
            android:id="@+id/lblProfileUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="17sp"
            android:layout_alignBaseline="@+id/txtProfileUsername"
            android:layout_alignBottom="@+id/txtProfileUsername"
            android:layout_toLeftOf="@+id/txtProfileUsername"
            android:layout_toStartOf="@+id/txtProfileUsername"
            android:layout_marginRight="19dp"
            android:layout_marginEnd="19dp" />

        <TextView
            android:id="@+id/lblProfileFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:textSize="17sp"
            android:layout_alignBaseline="@+id/txtProfileFirstName"
            android:layout_alignBottom="@+id/txtProfileFirstName"
            android:layout_alignLeft="@+id/lblProfileUsername"
            android:layout_alignStart="@+id/lblProfileUsername" />

        <TextView
            android:id="@+id/lblProfileLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:textSize="17sp"
            android:layout_alignBaseline="@+id/txtProfileLastName"
            android:layout_alignBottom="@+id/txtProfileLastName"
            android:layout_alignLeft="@+id/lblProfileFirstName"
            android:layout_alignStart="@+id/lblProfileFirstName" />

        <TextView
            android:id="@+id/lblProfileVisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visible"
            android:textSize="17sp"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:layout_alignBaseline="@+id/chkProfileVisible"
            android:layout_alignBottom="@+id/chkProfileVisible"
            android:layout_toLeftOf="@+id/chkProfileVisible"
            android:layout_toStartOf="@+id/chkProfileVisible" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
