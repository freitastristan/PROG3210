<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tristan.prog3210a01.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <RelativeLayout
        android:layout_width="585dp"
        android:layout_height="514dp"
        android:layout_gravity="center"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="5dp">

        <Button
            android:id="@+id/btnRegisterAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Register"
            android:layout_alignBaseline="@+id/btnLogin"
            android:layout_alignBottom="@+id/btnLogin"
            android:layout_alignLeft="@+id/editPassword"
            android:layout_alignStart="@+id/editPassword" />

        <EditText
            android:id="@+id/editUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="47dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_below="@+id/lblLogin"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/editPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editUsername"
            android:layout_alignStart="@+id/editUsername"
            android:layout_below="@+id/editUsername"
            android:layout_marginTop="36dp"
            android:ems="10"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/lblLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:text="Login" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Login"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/editPassword"
            android:layout_alignEnd="@+id/editPassword" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
